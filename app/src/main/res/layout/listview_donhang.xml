<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="8dp"
        android:textStyle="bold"
        android:textColor="#000"
        android:id="@+id/tvTrangThaiDonHang"
        android:text="Chờ xác nhận"
        android:layout_marginRight="8dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:id="@+id/ivAnhSanPham"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginRight="8dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Hành trình"
                android:layout_marginBottom="5dp"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:textSize="18dp"
                android:id="@+id/tvTitle"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp"
                android:layout_height="30dp">
                <TextView
                    android:layout_width="145dp"
                    android:layout_height="match_parent"
                    android:text="Mã đơn hàng: ABCD"
                    android:textSize="10dp"
                    android:gravity="center"
                    android:id="@+id/tvMaDonHang"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="|"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="10dp"
                    android:text="18/05/2022"
                    android:id="@+id/tvNgay"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="30dp">
                <TextView
                    android:layout_width="145dp"
                    android:layout_height="match_parent"
                    android:text="Số lượng: 5"
                    android:textSize="10dp"
                    android:gravity="center"
                    android:id="@+id/tvQuantity"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="|"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="10dp"
                    android:text="1000 đ"
                    android:id="@+id/tvPrice"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>