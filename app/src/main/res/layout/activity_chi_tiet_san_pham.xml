<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ChiTietSanPhamActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/idScrollView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivProduct"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_gravity="center"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:contentDescription="Image"
                android:src="@drawable/db" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cơ sở dữ liệu"
                android:textSize="32dp"
                android:textStyle="bold"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Giá: 999.000đ"
                android:textSize="24dp"
                android:textStyle="bold"
                android:textAlignment="center" />
            <TextView
                android:id="@+id/tvCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sách ý nghĩ"
                android:textSize="24dp"
                android:textStyle="bold"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sách ý "
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tvAuthor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NXB: NXB Kim Đồng"
                android:textSize="24dp"
                android:textStyle="bold"
                android:textAlignment="center" />
            <TextView
                android:id="@+id/tvPublisher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sách ý nghĩ"
                android:textSize="24dp"
                android:textStyle="bold"
                android:textAlignment="center" />
            <TextView
                android:id="@+id/tvComment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bình luận ()"
                android:textSize="28dp"
                android:paddingLeft="12dp"
                android:textColor="#000"
                android:layout_marginTop="116dp"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/content"/>

                <Button
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="Gửi"
                    android:id="@+id/btnSend"/>
            </LinearLayout>


            <ListView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/lvComment"/>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="50dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Thêm vào giỏ"
            android:textAllCaps="false"
            android:textSize="15dp"
            android:textColor="#fff"
            android:background="@drawable/button_green"
            android:id="@+id/btnThemVaoGio"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Mua ngay"
            android:textAllCaps="false"
            android:textSize="15dp"
            android:textColor="#fff"
            android:background="@drawable/button_red"
            android:id="@+id/btnMua"/>
    </LinearLayout>



</LinearLayout>